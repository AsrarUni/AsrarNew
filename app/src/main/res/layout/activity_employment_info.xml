<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Relative_Employment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/useful_dark"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/Employment_IV_profile_pic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_person"
        tools:ignore="ContentDescription" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Employment_IV_profile_pic"
        android:layout_gravity="right|end"
        android:background="@color/useful_light"
        android:columnCount="3"
        android:elevation="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp"
        android:rowCount="11"
        android:textDirection="rtl">


        <TextView
            android:id="@+id/Employment_Tv_Fname_Lable"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:paddingBottom="10dp"
            android:text="@string/Fname" />

        <TextView
            android:id="@+id/Employment_Tv_Fname"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:paddingBottom="10dp"
            android:text="@string/unknown" />


        <TextView
            android:id="@+id/Employment_Tv_Lname_Lable"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:paddingBottom="10dp"
            android:text="@string/Lname" />

        <TextView
            android:id="@+id/Employment_Tv_Lname"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:paddingBottom="10dp"
            android:text="@string/unknown" />

        <TextView
            android:id="@+id/Employment_Tv_Tel_Lable"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:paddingBottom="10dp"
            android:text="@string/Tel" />

        <TextView
            android:id="@+id/Employment_Tv_Tel"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:paddingBottom="10dp"
            android:text="@string/unknown" />


        <TextView
            android:id="@+id/Employment_Tv_Mobile_Lable"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="3"
            android:paddingBottom="10dp"
            android:text="@string/mobile" />

        <TextView
            android:id="@+id/Employment_Tv_Mobile"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:paddingBottom="10dp"
            android:text="@string/unknown" />


        <TextView
            android:id="@+id/Employment_Tv_Email_Lable"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:paddingBottom="10dp"
            android:text="@string/email" />

        <TextView
            android:id="@+id/Employment_Tv_Email"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:paddingBottom="10dp"
            android:text="@string/unknown" />

        <TextView
            android:id="@+id/Employment_Tv_FatherName_Lable"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="5"
            android:paddingBottom="10dp"
            android:text="@string/FatherName" />

        <TextView
            android:id="@+id/Employment_Tv_FatherName"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:paddingBottom="10dp"
            android:text="@string/unknown" />

        <TextView
            android:id="@+id/Employment_Tv_CodeMeli_Lable"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="6"
            android:paddingBottom="10dp"
            android:text="@string/codeMeli" />


        <TextView
            android:id="@+id/Employment_Tv_CodeMeli"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:paddingBottom="10dp"
            android:text="@string/unknown" />

        <TextView
            android:id="@+id/Employment_Tv_PersonalNumber_Lable"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="7"
            android:paddingBottom="10dp"
            android:text="@string/PersonalNumber" />


        <TextView
            android:id="@+id/Employment_Tv_PersonalNumber"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:paddingBottom="10dp"

            android:text="@string/unknown" />

        <TextView
            android:id="@+id/Employment_Tv_DateBirthday_Lable"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="8"
            android:paddingBottom="10dp"
            android:text="@string/DateBirthday" />

        <TextView
            android:id="@+id/Employment_Tv_DateBirthda"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="8"
            android:paddingBottom="10dp"
            android:text="@string/unknown" />


        <TextView
            android:id="@+id/Employment_Tv_TypeID_Lable"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="9"
            android:paddingBottom="1dp"
            android:text="@string/TypeID" />


        <TextView
            android:id="@+id/Employment_Tv_TypeID"
            style="@style/TextViewModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="9"
            android:paddingBottom="1dp"
            android:text="@string/unknown" />

    </GridLayout>


</RelativeLayout>
