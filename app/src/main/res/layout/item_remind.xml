<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/selector_usefullight_purple">

    <LinearLayout
        android:id="@+id/setting_contaner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="right"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/remind_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:textSize="20sp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/remind_title_lable"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_vertical|right"
            android:layout_marginRight="5dp"
            android:text="@string/title_of_reminder"
            android:textColor="@color/useful_dark"
            android:textSize="22sp"

            />


    </LinearLayout>

    <com.example.mersad.asrar.Utils.JustifiedTextView
        android:id="@+id/remind_jtv_message"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/rectangle"
        android:layout_margin="10dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/useful_dark">

    </RelativeLayout>

</LinearLayout>
